<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="profile">
		<fieldset name="profile"
			label="PLG_USER_PROFILE_SLIDER_LABEL"
		>
			<field name="aanhef" type="list"
				   description="PLG_USER_BIXMAILINGSETTINGS_AANHEF_DESC"
				   label="PLG_USER_BIXMAILINGSETTINGS_AANHEF_LABEL"
				   default="Dhr"
					>
				<option value="Dhr">PLG_USER_BIXMAILINGSETTINGS_AANHEF_DHR</option>
				<option value="Mevr">PLG_USER_BIXMAILINGSETTINGS_AANHEF_MEVR</option>
			</field>

			<field
					name="voornaam"
					type="text"
					description="PLG_USER_BIXMAILINGSETTINGS_VOORNAAM_DESC"
					filter="string"
					label="PLG_USER_BIXMAILINGSETTINGS_VOORNAAM_LABEL"
					size="30"
					/>
			<field
					name="achternaam"
					type="text"
					description="PLG_USER_BIXMAILINGSETTINGS_ACHTERNAAM_DESC"
					filter="string"
					label="PLG_USER_BIXMAILINGSETTINGS_ACHTERNAAM_LABEL"
					size="30"
					required="true"
					/>

			<field
					name="bedrijfsnaam"
					type="text"
					description="PLG_USER_BIXMAILINGSETTINGS_BEDRIJFSNAAM_DESC"
					filter="string"
					label="PLG_USER_BIXMAILINGSETTINGS_BEDRIJFSNAAM_LABEL"
					size="30"
					required="true"
					/>

			<field
					name="postal_code"
					type="text"
					id="postal_code"
					description="PLG_USER_PROFILE_FIELD_POSTAL_CODE_DESC"
					filter="string"
					label="PLG_USER_PROFILE_FIELD_POSTAL_CODE_LABEL"
					size="30"
					/>

			<field
					name="address2"
					type="text"
					id="address2"
					description="PLG_USER_BIXMAILINGSETTINGS_HUISNUMMER_DESC"
					filter="string"
					label="PLG_USER_BIXMAILINGSETTINGS_HUISNUMMER_LABEL"
					size="30"
					/>

			<field
				name="address1"
				type="text"
				id="address1"
				description="PLG_USER_BIXMAILINGSETTINGS_STRAATNAAM_DESC"
				filter="string"
				label="PLG_USER_BIXMAILINGSETTINGS_STRAATNAAM_LABEL"
				size="30"
			/>

			<field
				name="city"
				type="text"
				id="city"
				description="PLG_USER_PROFILE_FIELD_CITY_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_CITY_LABEL"
				size="30"
			/>

			<field
				name="region"
				type="text"
				id="region"
				description="PLG_USER_PROFILE_FIELD_REGION_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_REGION_LABEL"
				size="30"
			/>

			<field
				name="country"
				type="text"
				id="country"
				description="PLG_USER_PROFILE_FIELD_COUNTRY_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_COUNTRY_LABEL"
				size="30"
			/>

			<field
				name="phone"
				type="tel"
				id="phone"
				description="PLG_USER_PROFILE_FIELD_PHONE_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_PHONE_LABEL"
				size="30"
			/>

			<field
				name="mobile"
				type="tel"
				id="mobile"
				description="PLG_USER_PROFILE_FIELD_MOBILE_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_MOBILE_LABEL"
				size="30"
			/>

			<field
				name="website"
				type="url"
				id="website"
				description="PLG_USER_PROFILE_FIELD_WEB_SITE_DESC"
				filter="url"
				label="PLG_USER_PROFILE_FIELD_WEB_SITE_LABEL"
				size="30"
			/>
			<field
				name="favoritebook"
				type="text"
				description="PLG_USER_PROFILE_FIELD_FAVORITE_BOOK_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_FAVORITE_BOOK_LABEL"
				size="30"
			/>
			<field
				name="aboutme"
				type="textarea"
				description="PLG_USER_PROFILE_FIELD_ABOUT_ME_DESC"
				label="PLG_USER_PROFILE_FIELD_ABOUT_ME_LABEL"
				cols="30"
				rows="5"
				filter="safehtml"
			/>
			<field name="dob_spacer" type="spacer"
				class="text"
				label="PLG_USER_PROFILE_SPACER_DOB"
			/>
			<field
				name="dob"
				type="calendar"
				label="PLG_USER_PROFILE_FIELD_DOB_LABEL"
				description="PLG_USER_PROFILE_FIELD_DOB_DESC"
				format="%Y-%m-%d"
				filter="server_utc"
			/>
			<field
				name="tos"
				type="tos"
				default=""
				label="PLG_USER_PROFILE_FIELD_TOS_LABEL"
				description="PLG_USER_PROFILE_FIELD_TOS_DESC">
				<option value="1">PLG_USER_PROFILE_OPTION_AGREE</option>
				<option value="">JNO</option>
			</field>
		</fieldset>
		<fieldset name="billtoAddress"
				  label="PLG_USER_VISITADDRESS_SLIDER_LABEL"
				>
			<field
					name="ST_bedrijfsnaam"
					type="text"
					description="PLG_USER_BIXMAILINGSETTINGS_BEDRIJFSNAAM_DESC"
					filter="string"
					label="PLG_USER_BIXMAILINGSETTINGS_BEDRIJFSNAAM_LABEL"
					size="30"
					/>

			<field
					name="ST_postal_code"
					type="text"
					id="postal_code"
					description="PLG_USER_PROFILE_FIELD_POSTAL_CODE_DESC"
					filter="string"
					label="PLG_USER_PROFILE_FIELD_POSTAL_CODE_LABEL"
					size="30"
					/>

			<field
					name="ST_address2"
					type="text"
					id="address2"
					description="PLG_USER_BIXMAILINGSETTINGS_HUISNUMMER_DESC"
					filter="string"
					label="PLG_USER_BIXMAILINGSETTINGS_HUISNUMMER_LABEL"
					size="30"
					/>

			<field
					name="ST_address1"
					type="text"
					id="address1"
					description="PLG_USER_BIXMAILINGSETTINGS_STRAATNAAM_DESC"
					filter="string"
					label="PLG_USER_BIXMAILINGSETTINGS_STRAATNAAM_LABEL"
					size="30"
					/>

			<field
					name="ST_city"
					type="text"
					id="city"
					description="PLG_USER_PROFILE_FIELD_CITY_DESC"
					filter="string"
					label="PLG_USER_PROFILE_FIELD_CITY_LABEL"
					size="30"
					/>


		</fieldset>
		<fieldset name="bixmailingsettings"
				  label="PLG_USER_BIXMAILINGSETTINGS_SLIDER_LABEL"
				>

			<field
					name="klantnummer"
					type="text"
					description="PLG_USER_BIXMAILINGSETTINGS_KLANTNUMMER_DESC"
					filter="string"
					label="PLG_USER_BIXMAILINGSETTINGS_KLANTNUMMER_LABEL"
					size="30"
					/>

			<field
					name="gls_customer_number"
					type="glscustomernumber"
                    label="GLS klantnummer"
                    description="Kies eventueel een afwijkend GLS nummer"
					/>

            <field
                    name="api_username"
                    type="text"
                    description="Gebruikersnaam voor de API toegang"
                    filter="string"
                    label="API gebruikersnaam"
                    size="30"
            />

            <field
                    name="api_private_key"
                    type="text"
                    description="Sleutel voor de API toegang"
                    filter="string"
                    label="API private"
                    size="30"
            />

            <field
                    name="zpl_printer"
                    type="text"
                    description="Printer voor ZPL labels (Naam als in systeem)"
                    filter="string"
                    label="Etikettenprinter"
                    size="30"
            />

            <field
                    name="pdf_printer"
                    type="text"
                    description="Printer voor PDF labels (Naam als in systeem)"
                    filter="string"
                    label="Documentenprinter"
                    size="30"
            />

            <field name="mailtype" type="list"
				   description="PLG_USER_BIXMAILINGSETTINGS_MAILTYPE_DESC"
				   label="PLG_USER_BIXMAILINGSETTINGS_MAILTYPE_LABEL"
				   default="aang"
					>
				<option value="nooit">PLG_USER_BIXMAILINGSETTINGS_MAILTYPE_NOOIT</option>
				<option value="alles">PLG_USER_BIXMAILINGSETTINGS_MAILTYPE_ALLES</option>
				<option value="aang">PLG_USER_BIXMAILINGSETTINGS_MAILTYPE_AANG</option>
			</field>

            <field name="mail_admin_onparcel" type="list"
				   description="Stuur mail naar administrator als klant pakkket aanmeldt"
				   label="Admin mail bij pakket"
				   default="1"
					>
				<option value="1">Ja</option>
				<option value="0">Nee</option>
			</field>

			<field name="activationKey" type="hidden" value="" />

			<field name="modified" type="hidden" value="" />
		</fieldset>

	</fields>
</form>
